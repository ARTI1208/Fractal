<Window x:Class="Fractal.WarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Fractal"
        mc:Ignorable="d"
        Title="Предупреждение" Height="Auto" Width="Auto">
    <StackPanel Margin="10" VerticalAlignment="Top" Orientation="Vertical">
        <Label Name="WarningLabel"></Label>
        <CheckBox Margin="10" Name="AgainCheckBox">Do not show again</CheckBox>
        <StackPanel Margin="0,10,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Click="OnCancelButtonClick" Name="CancelButton" Width="100" Margin="0,0,20,0">Cancel</Button>
            <Button Click="OnOkButtonClick" Name="OkButton" Width="100" ForceCursor="True">Ok</Button>
        </StackPanel>
    </StackPanel>
</Window>
